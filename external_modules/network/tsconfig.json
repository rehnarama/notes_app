{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",

    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "downlevelIteration": true,

    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "signalling": ["../signalling"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
